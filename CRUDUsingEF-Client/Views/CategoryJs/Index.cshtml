
@{ 
    ViewBag.Title = "Index";
}

<link href="https://cdn.datatables.net/2.2.1/css/dataTables.dataTables.min.css" rel="stylesheet"/>

<script src="~/Scripts/jquery-3.7.1.min.js"></script>

<script src="https://cdn.datatables.net/2.2.1/js/dataTables.min.js"></script>

<h2>Category List</h2>

@Html.ActionLink("Create New","Create","CategoryJs")

<table id="tblCategory">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Rating</th>
        </tr>
    </thead>
    <tbody></tbody>
</table>
<script>
    $(function () {
        $.ajax({
            url: 'https://localhost:44399/api/category',
            type: 'get',
            success: function (response) {
                /*  alert('Api call success');*/
                console.log(response);
                $('#tblCategory').DataTable({
                    data: response,
                    columns: [
                        { "data": "Id" },
                        { "data": "Name" },
                        { "data": "Rating" }

                    ]
                });

            },
            error: function (reason) {
                alert('Api call failed');
            }
        });
    });
</script>
